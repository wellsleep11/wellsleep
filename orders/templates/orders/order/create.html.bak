{% extends 'base.html' %}
{% load static %}
{% block title %}
    Your Shopping Cart| Checkout
{% endblock %}

{% block content %}
	<div class="page-heading header-text">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h1>Home/Order Create</h1>
            <span>Checkout</span>
          </div>
        </div>
      </div>
    </div>
        <div class="row p-5"id="ordercreate">
            <div class="col-md-7">
                <h4 class="page-header" style="text-align:center; font-size:39px; color:red;">Checkout</h4>
                <form action="." method="post" class="forms">
                    {% csrf_token %}
                    {{ form.as_p }}<br>
                    <center><input type="submit" id="submitbtn"  class="btn btn-primary" value="Submit order"></center>
                </form>
            </div>
            <div class="col-md-5">
                <div class="page-header" style="color:red; font-size:30px;">
                    Your Order
                </div>
                <ul class="list-group">
                    {% for item in cart %}
                        <li class="list-group-item">
                        {{ item.quantity }}x {{ item.product.name }}
                        <span>Rs. {{ item.total_price }}</span>
                        </li>
                    {% endfor %}

                <li class="list-group-item active">Total Cost: Rs. {{ cart.get_total_price }}</li>
                </ul>

            </div>
        </div>
{% endblock %}